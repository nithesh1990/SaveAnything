<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorPrimary">@color/material_grey_50</item>
        <item name="colorPrimary">@android:color/holo_green_light</item>
    </style>

    <style name="AppTheme.Plain" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryPT</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPT</item>
        <item name="colorAccent">@color/colorAccentPT</item>
        <item name="customToolBarStyle">@style/ToolBarStyle.Plain</item>
        <!--<item name="textColorPrimary">@color/colorTextPrimaryPT</item> -->

    </style>
</resources>
