<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="primaryri">#F44336</color>
    <color name="primaryrifb100">#ffcdd2</color>
    <color name="primaryrifb300">#e57373</color>
    <color name="primary_dark_ri">#D32F2F</color>
    <color name="primary_lightri">#FFCDD2</color>
    <color name="accentri">#3F51B5</color>
    <color name="accentrifb100">#c5cae9</color>
    <color name="accentrifb300">#7986cb</color>
    <color name="primary_text_ri">#212121</color>
    <color name="secondary_text_ri">#727272</color>
    <color name="text_on_primary_ri">#ffffff</color>
    <color name="iconTintNormalri">#616161</color>
    <color name="dividerri">#B6B6B6</color>

    <style name="BasicTheme.RedIndigo" parent="AppTheme.RedIndigo">
        <item name="cardBackground">@color/primaryrifb100</item>
        <item name="android:windowBackground">@color/primaryrifb300</item>
        <item name="iconStyle">@style/iconStyle.RedIndigo</item>

        <!--<item name="android:actionButtonStyle">@sty</item>-->
    </style>

    <style name="AppTheme.RedIndigo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryri</item>
        <item name="colorPrimaryFallbackMed">@color/primaryrifb300</item>
        <item name="colorPrimaryFallbackLow">@color/primaryrifb100</item>
        <item name="colorAccentFallbackMed">@color/accentrifb300</item>
        <item name="colorAccentFallbackLow">@color/accentrifb100</item>
        <item name="colorPrimaryDark">@color/primary_dark_ri</item>
        <item name="colorAccent">@color/accentri</item>
        <item name="customToolBarStyle">@style/ToolBarStyle.RedIndigo</item>
        <item name="tabIndicatorColor">@color/color_white</item>
        <!--<item name="textColorPrimary">@color/colorTextPrimaryLT</item> -->
    </style>

    <style name="ToolBarStyle.RedIndigo" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_white</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
        <item name="tabTextAppearance">@style/TabLayoutTextStyle</item>
        <item name="tabBackground">@color/primaryri</item>
    </style>

    <style name="iconStyle.RedIndigo" parent="iconStyle">
        <item name="android:tint">@color/iconTintNormalri</item>
        <item name="tintHighlight">@color/accentri</item>
        <!-- For Future Use -->
    </style>

</resources>