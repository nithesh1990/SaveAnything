<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryLT</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLT</item>
        <item name="colorAccent">@color/colorAccentLT</item>
        <item name="customToolBarStyle">@style/ToolBarStyle.Light</item>
        <!--<item name="textColorPrimary">@color/colorTextPrimaryLT</item> -->
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDT</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDT</item>
        <item name="colorAccent">@color/colorAccentDT</item>
        <item name="customToolBarStyle">@style/ToolBarStyle.Dark</item>
        <!--<item name="textColorPrimary">@color/colorTextPrimaryDT</item> -->
    </style>

    <style name="AppTheme.Plain" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryPT</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPT</item>
        <item name="colorAccent">@color/colorAccentPT</item>
        <item name="customToolBarStyle">@style/ToolBarStyle.Plain</item>
        <!--<item name="textColorPrimary">@color/colorTextPrimaryPT</item> -->

    </style>

    <style name="AppTheme.PlainTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryPT</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPT</item>
        <item name="colorAccent">@color/colorAccentPT</item>
        <item name="customToolBarStyle">@style/ToolBarStyle.Plain</item>
        <!--<item name="textColorPrimary">@color/colorTextPrimaryPT</item> -->

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ToolBarStyle"/>

    <style name="ToolBarStyle.Light" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/colorTextPrimaryLT</item>
    </style>

    <style name="ToolBarStyle.Plain" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorTextPrimaryPT</item>
    </style>

</resources>
